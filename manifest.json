{
    "manifest_version": 2,
    "name": "ChatGPT Search Extension",
    "version": "1.0",
    "description": "Add ChatGPT as a custom search engine in Firefox.",
    "icons": {
        "48": "icons/chatgpt-48.jpg"
    },
    "chrome_settings_overrides": {
        "search_provider": {
            "name": "ChatGPT",
            "keyword": "chatgpt",
            "search_url": "https://chatgpt.com/?q=Please%20Use%20The%20Search%20Tool%20To%20Search%20For:%20{searchTerms}",
            "favicon_url": "https://chatgpt.com/favicon.ico",
            "suggest_url": "https://suggestqueries.google.com/complete/search?output=firefox&q={searchTerms}"
        }
    }
}